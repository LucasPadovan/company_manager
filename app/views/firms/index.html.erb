<% if @firms.empty? %>
  <%= render 'shared/empty_index' %>
<% else %>
  <div class="row">
    <div class="span12">
      <table class="table resource-list">
        <thead>
          <tr>
            <th><%= Firm.human_attribute_name 'nombre' %></th>
            <th><%= Firm.human_attribute_name 'cuit' %></th>
            <th><%= Firm.human_attribute_name 'afip_cond' %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @firms.each do |firm| %>
            <tr>
              <td><%= firm.nombre %></td>
              <td><%= firm.cuit %></td>
              <td><%= firm.afip_cond %></td>
              <td><%= link_to_show firm %></td>
              <td><%= link_to_edit edit_firm_path(firm) if can? :update, firm %></td>
              <td><%= link_to_destroy firm if can? :destroy, firm %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= pagination_links(@firms) %>
<% end %>

<div class="form-actions">
  <%= link_to(
    t('view.firms.new', default: :'label.new'),
    new_firm_path, class: 'btn btn-primary'
  ) if can? :create, Firm %>
</div>
