= simple_form_for @interest, url: firm_interests_path(@firm), html: { remote: true, data: { target: "#{params[:type]}_interest_body", modal: true, error: 'modal' } } do |f|
  = f.input :product_id, collection: Product.products_for_select
  = f.input :date, as: :string, input_html: { class: 'datepicker', value: Date.today.strftime('%d/%m/%Y') }
  -#= f.input :type, as: :hidden, input_html: { value: params[:type] }
  = content_for :form_actions do
    = link_to_close_modal
    = f.submit t("view.interests.new.#{params[:type]}_this_product"), class: 'btn btn-primary'

-#cleanModalOnClose
