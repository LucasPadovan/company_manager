<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="iconic">&#xe055;</span>
      </a>
      
      <%= link_to t('app_name'), root_path, class: 'brand' %>
      
      <% if user_signed_in? %>
        <div class="nav-collapse">
          <ul class="nav">
            <%= show_menu_link( name: 'users', controllers: 'users', path: users_path ) if can?( :read, User ) %>
            <%= show_menu_link( name: 'firms', controllers: 'firms', path: firms_path ) if can?( :read, Firm ) %>
            <%= show_menu_link( name: 'contacts', controllers: 'contacts', path: contacts_path ) if can?( :read, Contact ) %>
            <%= show_menu_link( name: 'purchase_invoices', controllers: 'purchase_invoices', path: purchase_invoices_path ) if can?( :read, PurchaseInvoice ) %>
          </ul>
          <%= render partial: 'shared/nav_search' %>
          <ul class="nav pull-right">
            <li>
              <%= link_to(
                current_user.email, edit_profile_user_path(current_user),
                'title' => t('view.users.edit_profile'),
                'data-show-tooltip' => true, 'data-placement' => 'bottom'
              ) %>
            </li>
            <li>
              <%= link_to(
                '&#x2192;'.html_safe, destroy_user_session_path,
                'title' => t('menu.actions.logout'), 'class' => 'iconic',
                'id' => 'logout', 'data-show-tooltip' => true,
                'data-placement' => 'bottom', 'method' => :delete
              ) %>
            </li>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>
