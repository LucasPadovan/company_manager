.container-fluid
  %h1 Ventas de #{@monthly_movement.month} de #{@monthly_movement.year}

  %table.table.table-bordered.table-striped
    %thead
      %tr
        %th Fecha
        %th Empresa
        %th CUIT
        %th Ventas
        %th Consumo
        %th Iva
        %th Retencion
        %th Conceptos no gravados
        %th Total
        %th
    %tbody
      - @purchase_invoices.each do |purchase_invoice|
        %tr
          %td= purchase_invoice.date.strftime('%d/%m/%y')
          %td= purchase_invoice.firm.nombre
          %td= purchase_invoice.firm.cuit
          %td= purchase_invoice.subtotal if purchase_invoice.destination_type == 'Ventas'
          %td= purchase_invoice.subtotal if purchase_invoice.destination_type == 'Consumo'
          %td= purchase_invoice.iva
          %td= purchase_invoice.retencion
          %td= purchase_invoice.other_concepts
          %td= purchase_invoice.total
          %td
            = link_to_show [purchase_invoice.monthly_movement, purchase_invoice]
            = link_to_edit ['edit', purchase_invoice.monthly_movement, purchase_invoice]
            = link_to_destroy [purchase_invoice.monthly_movement, purchase_invoice], method: :delete, data: { confirm: 'Estás a punto de eliminar una factura, ¿estás seguro que deseas hacer esto?' }

  = link_to 'Nueva factura de compra', new_monthly_movement_purchase_invoice_path, class: 'btn btn-primary'
