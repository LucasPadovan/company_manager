.modal
  = simple_form_for :product, url: product_path(@product), html: { remote: true,
    data: { target: "product_#{@product.id}", modal: true, error: 'modal', replace: true,
    responds_as: :put }, method: :put } do |f|
    .modal-header
      %h3= @title
    .modal-body
      = render partial: 'form', locals: { f: f }
    .modal-footer
      = yield :form_actions