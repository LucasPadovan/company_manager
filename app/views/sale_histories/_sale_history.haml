%tr{ id: dom_id(sale_history.firm) }
  %td= @firm ? sale_history.product : sale_history.firm
  %td= sale_history.date.strftime('%d/%m/%y - %H:%M')
  %td= sale_history.price
  %td
    = srbuj_link_to_new t('view.sale_histories.update_price'), new_product_sale_history_path(sale_history.product, firm: sale_history.firm), class: 'btn btn-primary btn-mini'
    = link_to t('view.products.show_historic'), product_sale_histories_path(sale_history.product, firm: sale_history.firm), class: 'btn btn-success btn-mini'
